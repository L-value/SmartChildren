<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pack"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pack" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:text="记忆游戏"
                android:background="#ffffffff"
                android:textColor="#ff000000" />

            <ImageButton
                android:id="@+id/imagememory"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/imagebutton_memory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:textColor="#ff000000"
                android:background="#ffffffff"
                android:text="思维游戏" />

            <ImageButton
                android:id="@+id/imageconsider"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="72dp"
                android:background="@drawable/imagebutton_consider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                android:textColor="#ff000000"
                android:background="#ffffffff"
                android:text="识字游戏" />

            <ImageButton
                android:id="@+id/imageword"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/imageconsider"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="24dp"
                android:background="@drawable/imagebutton_word" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              	android:layout_marginTop="370dp"
                android:layout_toLeftOf="@+id/imageway"
                android:text="计算游戏"
                android:background="#ffffffff"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageword"
                android:layout_marginTop="80dp"
                android:background="#ffffffff"
                android:textColor="#ff000000"
                android:text="方向识别" />

            <ImageButton
                android:id="@+id/imageway"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imagememory"
                android:layout_marginTop="14dp"
                android:background="@drawable/imagebutton_way" />

            <ImageButton
                android:id="@+id/imagecalculate"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_alignRight="@+id/textView1"
                android:layout_below="@+id/imageway"
                android:layout_marginTop="36dp"
                android:background="@drawable/imagebutton_calculate" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>